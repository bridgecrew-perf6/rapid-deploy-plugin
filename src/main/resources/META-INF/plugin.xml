<idea-plugin>

    <!-- 插件唯一id，不能和其他插件项目重复，推荐使用com.xxx.xxx的格式,插件不同版本之间不能更改，若没有指定，则与插件名称相同 -->
    <id>com.x0e.rapid.deploy.plugin</id>

    <!-- 插件名称，别人在官方插件库搜索你的插件时使用的名称 -->
    <name>Rapid Deploy</name>

    <!-- 插件版本 -->
    <version>1.0.0.beta</version>

    <!-- 供应商主页和email-->
    <vendor email="do@dodoo.co" url="https://gitee.com/x0e">x0e(灰鸟)</vendor>

    <!-- 插件版本变更信息，支持HTML标签;将展示在 settings | Plugins 对话框和插件仓库的Web页面 -->
    <change-notes>支持FTP、SSH协议连接</change-notes>

    <!-- 插件的描述 -->
    <description>
        <![CDATA[
            支出SSH、SFTP等协议.<br>
            1. 支持Maven、Gradle等后端构建工具制品<br>
            2. 支持yarn、npm等前端构建工具进行制品<br>
        ]]>
    </description>

    <!-- 声明插件所依赖的其他插件的坐标 -->
    <!--    <depends></depends>-->

    <!-- 插件兼容IDEA的最大和最小 build 号，两个属性可以任选一个或者同时使用 -->
    <!--官网详细介绍：http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html-->
    <idea-version since-build="3000"/>

    <!-- 插件所依赖的其他插件的id -->
    <!-- 官网详细介绍: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html-->
    <depends>com.intellij.modules.platform</depends>

    <!-- 声明应用组件 -->
    <application-components>
        <!-- 在这里添加应用组件 -->
    </application-components>

    <!-- 声明项目组件 -->
    <project-components>
        <!-- 在这里添加项目组件  -->
    </project-components>

    <!-- 声明模块组件 -->
    <module-components>
        <!-- 在这里添加模块组件 -->
    </module-components>

    <!-- 插件定义的扩展点，以供其他插件扩展该插件 -->
    <extensionPoints>
        <!-- 在这里添加扩展点 -->
    </extensionPoints>

    <!-- 声明该插件对IDEA core或其他插件的扩展 -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- 在这里添加扩展 -->
    </extensions>

    <!-- 添加Action -->
    <actions>
        <!-- 在这里添加action动作 -->
    </actions>
</idea-plugin>
